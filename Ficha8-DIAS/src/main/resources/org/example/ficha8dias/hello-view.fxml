<VBox alignment="CENTER" prefHeight="470.0" prefWidth="654.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ficha8dias.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Pane prefHeight="566.0" prefWidth="726.0">
      <children>
         <VBox layoutX="52.0" layoutY="83.0" prefHeight="124.0" prefWidth="215.0">
            <children>
               <HBox prefHeight="62.0" prefWidth="130.0">
                  <children>
                     <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                        <children>
                           <Label text="Celsius" />
                        </children>
                     </VBox>
                     <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                        <children>
                           <TextField fx:id="celsiusTxt" alignment="TOP_LEFT" />
                        </children>
                     </VBox>
                  </children>
               </HBox>
               <HBox prefHeight="62.0" prefWidth="130.0">
                  <children>
                     <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                        <children>
                           <Label text="Fahrenheit" />
                        </children>
                     </VBox>
                     <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                        <children>
                           <TextField fx:id="fahrenheitTxt" editable="false"/>
                        </children>
                     </VBox>
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Button fx:id="convBtn" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#convertMethod" text="Converter" textOverrun="WORD_ELLIPSIS">
