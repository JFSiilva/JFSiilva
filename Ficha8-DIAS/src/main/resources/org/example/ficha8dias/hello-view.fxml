                        </HBox.margin>
                     </Button>
                     <Button fx:id="clearBtn" alignment="TOP_LEFT" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#clearMethod" text="Limpar" textOverrun="WORD_ELLIPSIS" />
                     <Button fx:id="exitBtn" alignment="TOP_LEFT" layoutX="64.0" layoutY="10.0" mnemonicParsing="false" onAction="#exitMethod" text="Sair" textOverrun="WORD_ELLIPSIS">
                        <HBox.margin>
                           <Insets left="15.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
            </children>
         </VBox>
      </children>
   </Pane>
